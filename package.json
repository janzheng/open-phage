{
  "name": "OpenPhage",
  "description": "Open Phage Training Program",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev --port 2024",
    "loaderdev": "npm run loader; npm run dev",
    "zeit-notes": "zeit has problems building on their end, but 'zeit prod' does it locally. Requires build to use export, but old sapper build is: sapper build --legacy",
    "build": "npm run loader; ls && sapper build --legacy",
    "qbuild": "ls && sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "prod": "ls && sapper build --legacy; now --prod",
    "now-preview": "now --local-config=now-preview.json",
    "commit": "git add . -A ; git commit ; git push origin preview ",
    "loader": "node src/_utils/loader.js f34a041d08744868a0ca06a6a0671b5a",
    "cleanup": "rm -r __sapper__ ; rm static/data/notion.json; rm static/data/cytosis.json"
  },
  "engines": {
    "node": "12.x"
  },
  "browser": {
    "airtable": "./node_modules/airtable/build/airtable.browser"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "@polka/redirect": "^1.0.0-next.0",
    "@polka/send": "^0.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.1",
    "cookie-session": "^1.4.0",
    "crypto": "^1.0.1",
    "cytosis": "^0.0.418",
    "entities": "^2.0.3",
    "faunadb": "^3.0.1",
    "formidable": "^1.2.2",
    "fs": "^0.0.1-security",
    "lodash.debounce": "^4.0.8",
    "lodash.memoize": "^4.1.2",
    "marked": "^1.0.0",
    "node-cache": "^5.1.1",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "polka": "next",
    "sharp": "^0.26.1",
    "sirv": "^0.4.0",
    "util": "^0.12.3",
    "yup": "^0.29.1"
  },
