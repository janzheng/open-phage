    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "airtable": "^0.8.1",
    "autoprefixer": "^9.7.6",
    "coeur": "^0.2.292",
    "dotenv": "^8.2.0",
    "npm-run-all": "^4.1.5",
